    xmlns:localViewModels="using:UWPCore.Demo.ViewModels"
    mc:Ignorable="d">
    <localViewModels:MvvmViewModel.Items>
        
        <localViewModels:ItemViewModel>
            <localViewModels:ItemViewModel.Model>
                <localModels:ItemModel Id="01" Title="Sample title 1" Description="Some sample description text...">
