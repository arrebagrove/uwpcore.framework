                </localModels:ItemModel>
            </localViewModels:ItemViewModel.Model>
        </localViewModels:ItemViewModel>

        <localViewModels:ItemViewModel>
            <localViewModels:ItemViewModel.Model>
                <localModels:ItemModel Id="02" Title="Sample title 2" Description="Some more pseudo description text, which makes no sense at all.">
                    <localModels:ItemModel.SubItem>
                        <localModels:SubItemModel Title="Subtitle 2" Link="www.bing.com" />
                    </localModels:ItemModel.SubItem>
                </localModels:ItemModel>
            </localViewModels:ItemViewModel.Model>
        </localViewModels:ItemViewModel>

    </localViewModels:MvvmViewModel.Items>
