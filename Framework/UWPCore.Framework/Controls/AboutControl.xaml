<UserControl
    x:Class="UWPCore.Framework.Controls.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCore.Framework.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding AppTitle}" FontFamily="Arial" Margin="4" />
            <TextBlock Text="{Binding AppDeveloper}" Margin="4" />
            <TextBlock Text="{Binding AppVersion}" Margin="4" />
            <TextBlock Text="{Binding AppDescription}" Margin="4" />
            <Border Background="{StaticResource SystemControlBackgroundAccentBrush}" Height="120" Width="120">
                <Image Source="{Binding AppIcon}" Margin="4" />
            </Border>
            <Button Content="{Binding ShowPrivacyInfoText}" Command="{Binding ShowPrivacyInfoCommand}" Margin="4" />
            <Button Content="{Binding RateAndReviewText}" Command="{Binding RateAndReviewCommand}" Margin="4" />
            <Button Content="{Binding MoreAppsText}" Command="{Binding MoreAppsCommand}" Margin="4" />
            <Button Content="{Binding SendFeedbackEmailText}" Command="{Binding SendFeedbackEmailCommand}" Margin="4" />
        </StackPanel>
        
    </Grid>
</UserControl>
